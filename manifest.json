{
  "manifest_version": 3,
  "name": "Digikala Scraper",
  "version": "1.0",
  "description": "Extract product data from Digikala and save as JSON.",
  "permissions": ["scripting", "activeTab", "downloads"],
  "host_permissions": ["https://www.digikala.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}